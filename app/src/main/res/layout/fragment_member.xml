<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MemberFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:id="@+id/topbar"
                android:gravity="center_vertical|left">
                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/back" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_baseline_delete_group" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/GroupNameArea"
                app:layout_constraintTop_toBottomOf="@id/topbar"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/GroupInfo"
                app:layout_constraintTop_toBottomOf="@id/GroupNameArea"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/GroupCodeArea"
                app:layout_constraintTop_toBottomOf="@id/GroupInfo"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_marginBottom="10dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                >
                <ImageView
                    android:id="@+id/user1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                />
                <TextView
                    android:id="@+id/user_name1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user_name2"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    />
                <TextView
                    android:id="@+id/user_per1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user_per2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    />


                <ImageView
                    android:id="@id/user2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user1"
                    app:layout_constraintRight_toLeftOf="@+id/user3"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user2"
                    app:layout_constraintLeft_toRightOf="@+id/user_name1"
                    app:layout_constraintRight_toLeftOf="@+id/user_name3"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    />
                <TextView
                    android:id="@+id/user_per2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name2"
                    app:layout_constraintLeft_toRightOf="@+id/user_per1"
                    app:layout_constraintRight_toLeftOf="@+id/user_per3"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@id/user3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/user4"
                    app:layout_constraintLeft_toRightOf="@+id/user2"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user3"
                    app:layout_constraintRight_toLeftOf="@+id/user_name4"
                    app:layout_constraintLeft_toRightOf="@+id/user_name2"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    />
                <TextView
                    android:id="@+id/user_per3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name3"
                    app:layout_constraintRight_toLeftOf="@+id/user_per4"
                    app:layout_constraintLeft_toRightOf="@+id/user_per2"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@id/user4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user4"
                    app:layout_constraintLeft_toRightOf="@+id/user_name3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    />

                <TextView
                    android:id="@+id/user_per4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/user_per3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_name4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <ImageView
                    android:id="@+id/user5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user_name6"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/user_per5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user_per6"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />


                <ImageView
                    android:id="@id/user6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user5"
                    app:layout_constraintRight_toLeftOf="@+id/user7"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name6"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user6"
                    app:layout_constraintLeft_toRightOf="@+id/user_name5"
                    app:layout_constraintRight_toLeftOf="@+id/user_name7"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/user_per6"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name6"
                    app:layout_constraintLeft_toRightOf="@+id/user_per5"
                    app:layout_constraintRight_toLeftOf="@+id/user_per7"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@id/user7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/user8"
                    app:layout_constraintLeft_toRightOf="@+id/user6"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name7"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user7"
                    app:layout_constraintRight_toLeftOf="@+id/user_name8"
                    app:layout_constraintLeft_toRightOf="@+id/user_name6"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/user_per7"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name7"
                    app:layout_constraintRight_toLeftOf="@+id/user_per8"
                    app:layout_constraintLeft_toRightOf="@+id/user_per6"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@id/user8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user7"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/user_null"
                    />
                <TextView
                    android:id="@+id/user_name8"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user8"
                    app:layout_constraintLeft_toRightOf="@+id/user_name7"
                    app:layout_constraintRight_toRightOf="parent"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_weight="0.5"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/user_per8"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_name8"
                    app:layout_constraintLeft_toRightOf="@+id/user_per7"
                    app:layout_constraintRight_toRightOf="parent"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center_horizontal"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>