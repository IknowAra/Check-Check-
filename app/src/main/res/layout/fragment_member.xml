<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MemberFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_marginBottom="10dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                >
                <ImageView
                    android:id="@+id/user1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    />
                <TextView
                    android:id="@+id/user_name1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/user_name2"
                    android:autoSizeTextType="uniform"
                    />

                <ImageView
                    android:id="@id/user2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user1"
                    app:layout_constraintRight_toLeftOf="@+id/user3"
                    app:layout_constraintDimensionRatio="1:1"
                    />
                <TextView
                    android:id="@+id/user_name2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user2"
                    app:layout_constraintLeft_toRightOf="@+id/user_name1"
                    app:layout_constraintRight_toLeftOf="@+id/user_name3"
                    android:autoSizeTextType="uniform"
                    />

                <ImageView
                    android:id="@id/user3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/user4"
                    app:layout_constraintLeft_toRightOf="@+id/user2"
                    app:layout_constraintDimensionRatio="1:1"
                    />
                <TextView
                    android:id="@+id/user_name3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user3"
                    app:layout_constraintRight_toLeftOf="@+id/user_name4"
                    app:layout_constraintLeft_toRightOf="@+id/user_name2"
                    android:autoSizeTextType="uniform"
                    />

                <ImageView
                    android:id="@id/user4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    />
                <TextView
                    android:id="@+id/user_name4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/user4"
                    app:layout_constraintLeft_toRightOf="@+id/user_name3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:autoSizeTextType="uniform"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>