<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbac"
    tools:context=".HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>


    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_open"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_circular_border"
                android:padding="12dp"
                android:src="@drawable/square_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="44dp"
                    android:layout_height="51dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_people_alt_24" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="44dp"
                    android:layout_height="51dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/add_gro" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="30dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_group1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/button_background"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="그룹 이름"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/tx_persent1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="100%"
                android:textColor="#E46520"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_group2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/button_background"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="그룹 이름"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/tx_persent2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="100%"
                android:textColor="#E46520"
                android:textSize="30dp"
                tools:ignore="DuplicateIds" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_group3"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/button_background"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="그룹 이름"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/tx_persent3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="100%"
                android:textColor="#E46520"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_group4"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/button_background"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="그룹 이름"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/tx_persent4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="100%"
                android:textColor="#E46520"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_group5"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/button_background"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="그룹 이름"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintVertical_chainStyle="spread_inside" />
            <TextView
                android:id="@+id/tx_persent5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="100%"
                android:textColor="#E46520"
                android:textSize="30dp"
                tools:ignore="DuplicateIds" />
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>